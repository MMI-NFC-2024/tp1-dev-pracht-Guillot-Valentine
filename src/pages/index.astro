---
import * as Plot from "@observablehq/plot";
import PlotFigure from "../components/PlotFigure.astro";
import penguins from "../assets/penguins.json";
import weather from "../assets/weather.json";
import Header from "../components/Header.astro";
---

<Header />
<div>
  <h1>Bases de donnees variees</h1>
  <p>Visualisation de donnees a l'aide de la librairie Observable Plot</p>
  <h2>Penguins</h2>
  <PlotFigure
    options={{
      marks: [
        Plot.dot(penguins, { x: "culmen_length_mm", y: "culmen_depth_mm" }),
      ],
    }}
  />
</div>

<div>
  <h2>Weather</h2>
  <PlotFigure
    options={{
      marks: [Plot.lineY(weather, { x: "date", y: "precipitation" })],
    }}
  />
</div>

<style>
  h1,
  p {
    text-align: center;
    font-family: Arial, sans-serif;
    color: #333;
  }

  h2 {
    margin-top: 5rem;
    text-align: center;
    font-family: Arial, sans-serif;
    color: #555;
  }
</style>
